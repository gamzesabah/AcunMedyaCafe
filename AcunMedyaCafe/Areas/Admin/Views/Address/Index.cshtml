@model List<AcunMedyaCafe.Entities.Address>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Adres </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Adres Sayfası</a></li>
                <li class="breadcrumb-item active" aria-current="page">Adres</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="AdressId" class="form-control" />
                        <br />
                        <label>Haftaiçi Çalışma Saatleri</label>
                        <input type="text" asp-for="WeekdayHours" class="form-control" />
                        <br />
                        <label>Haftasonu Çalışma Saatleri</label>
                        <input type="text" asp-for="WeekendHours" class="form-control" />
                        <br />
                        <label>Telefon</label>
                        <input type="text" asp-for="Call" class="form-control" />
                        <br />
                        <button class="btn btn-primary"><i class="fa fa-save"></i></button><br />
                        <span asp-validation-for="WeekdayHours" class="text-danger"></span><br />
                        <span asp-validation-for="WeekendHours" class="text-danger"></span><br />
                        <span asp-validation-for="Call" class="text-danger"></span><br />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>