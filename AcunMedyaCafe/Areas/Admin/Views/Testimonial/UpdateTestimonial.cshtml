@model AcunMedyaCafe.Entities.Testimonial
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Referans Güncelleme Sayfası </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Güncelleme İşlemi</a></li>
                <li class="breadcrumb-item active" aria-current="page">Referans</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="TestimonialId" />
                        <label>Başlık</label>
                        <input type="text" asp-for="Title" class="form-control" />
                        <br />
                        <label>Açıklama</label>
                        <input type="text" asp-for="Description" class="form-control" />
                        <br />
                        <label>Resim (URL)</label>
                        <input type="text" asp-for="ImageUrl" class="form-control" />
                        <br />
                        <label>Puan</label>
                        <input type="number" asp-for="Raiting" class="form-control" />
                        <br />
                        <button class="btn btn-primary"><i class="fa fa-save"></i></button><br />
                        <span asp-validation-for="Title" class="text-danger"></span><br />
                        <span asp-validation-for="Description" class="text-danger"></span><br />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span><br />
                        <span asp-validation-for="Raiting" class="text-danger"></span><br />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>