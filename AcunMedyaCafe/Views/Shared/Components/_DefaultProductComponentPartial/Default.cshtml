@model List<AcunMedyaCafe.Entities.Product>

<section class="menu-area section-gap" id="coffee">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="menu-content pb-60 col-lg-10">
                <div class="title text-center">
                    <h1 class="mb-10">Kahvelerimiz</h1>
                    <p>Aradığınız kahveler işte burada...</p>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4">
                    <div class="single-menu">
                        <div class="title-div justify-content-between d-flex">
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height:250px; object-fit:cover;"/>
                            
                        </div>
                        <h3>
                            @item.Name
                        </h3>
                        <p>
                            @item.Description
                        </p>
                        <p class="price float-right">
                            @item.Price ₺
                        </p>
                        <h6>@item.Category.CategoryName</h6>
                    </div>
                </div>
            }
        </div>
    </div>
</section>