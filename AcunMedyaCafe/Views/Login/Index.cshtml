@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <title>Admin Giriş</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(-45deg, #ff6f61, #de425b, #3a1c71, #0f2027);
            background-size: 400% 400%;
            animation: gradientBG 12s ease infinite;
            color: white;
        }

        @@keyframes gradientBG {
            0%

        {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }

        }

        .login-box {
            background-color: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            padding: 50px;
            border-radius: 15px;
            width: 450px;
            margin: 100px auto;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
        }

        h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #fff;
        }

        .form-group {
            margin-bottom: 20px;
        }

        input {
            width: 100%;
            padding: 14px;
            border-radius: 8px;
            border: none;
            outline: none;
            font-size: 15px;
        }

        .btn {
            background: #00c9ff;
            background: linear-gradient(to right, #92fe9d, #00c9ff);
            color: #000;
            padding: 14px;
            width: 100%;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: bold;
            transition: 0.3s ease;
        }

            .btn:hover {
                opacity: 0.85;
            }

        .message {
            text-align: center;
            margin-bottom: 10px;
            font-weight: bold;
        }

        .error {
            color: #ffb3b3;
        }

        .success {
            color: #a0ffb3;
        }
    </style>
</head>
<body>
    <div class="login-box">
        <h2>Admin Giriş</h2>

        @if (TempData["Message"] != null)
        {
            <div class="message success">@TempData["Message"]</div>
        }

        @if (ViewBag.Error != null)
        {
            <div class="message error">@ViewBag.Error</div>
        }

        <form method="post">
            <div class="form-group">
                <input type="text" name="username" placeholder="Kullanıcı Adı" required />
            </div>
            <div class="form-group">
                <input type="password" name="password" placeholder="Şifre" required />
            </div>
            <button type="submit" class="btn">Giriş Yap</button>
        </form>
    </div>
</body>
</html>
